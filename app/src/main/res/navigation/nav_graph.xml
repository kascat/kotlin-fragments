<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.fragmentos.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/ir_esquerda"
            app:destination="@id/esquerdaFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit" />
        <action
            android:id="@+id/ir_direita"
            app:destination="@id/direitaFragment" />
    </fragment>
    <fragment
        android:id="@+id/esquerdaFragment"
        android:name="com.example.fragmentos.EsquerdaFragment"
        android:label="fragment_esquerda"
        tools:layout="@layout/fragment_esquerda" />
    <fragment
        android:id="@+id/direitaFragment"
        android:name="com.example.fragmentos.DireitaFragment"
        android:label="fragment_direita"
        tools:layout="@layout/fragment_direita" />
</navigation>